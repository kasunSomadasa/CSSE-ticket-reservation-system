<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sliit.csse.ticketscanner.SingleRide">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/details"/>


    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="205dp"
        android:text="From"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/fromView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="225dp"
        android:text="loading.." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="242dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="245dp"
        android:text="To"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/toView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fromView"
        android:layout_below="@+id/fromView"
        android:layout_marginTop="22dp"
        android:text="loading..." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="283dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="285dp"
        android:text="Start Date"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/startDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toView"
        android:layout_below="@+id/toView"
        android:layout_marginTop="25dp"
        android:text="loading..." />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="325dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="325dp"
        android:text="End Date"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/endDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toView"
        android:layout_below="@+id/toView"
        android:layout_marginTop="64dp"
        android:text="loading..." />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="365dp"
        android:background="@android:color/darker_gray"/>


    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="366dp"
        android:text="Start Time"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/startTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toView"
        android:layout_below="@+id/toView"
        android:layout_marginTop="105dp"
        android:text="loading..." />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="405dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="408dp"
        android:text="End Time"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/endTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toView"
        android:layout_below="@+id/toView"
        android:layout_marginTop="147dp"
        android:text="loading..." />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="445dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/amountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="448dp"
        android:text="Ticket Price"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toView"
        android:layout_below="@+id/toView"
        android:layout_marginTop="187dp"
        android:text="loading..." />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="485dp"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>
